<% provide(:title, "Vijesti") %>

<h1>Vijesti</h1>

<% @posts.each do |post| %>
	<div class="col-md-4">
		<%= image_tag post.image.url(:medium)%>
		<h2><%= post.title %></h2>
		<p><%= first_20(post.content) %></p>
		<%= link_to "Pročitaj više", {:action => 'single_post', :id => post.id}, :class => 'btn btn-primary'%>
	</div>
<%end%>

