<% provide(:title, "Kontakt") %>

<h1>Kontakt stranica</h1>
<p>Let us know what you think.</p>

<div class="col-sm-6 col-md-offset-3">

<%= form_for @contact, :url => {:controller => "contacts", :action => "create"} do |f| %>

  <div class="form-group">
    <%= f.label :name %><br/>
    <%= f.text_field :name, autofocus: true, required: :true, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, required: :true, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :message %><br/>
    <%= f.text_area :message, autofocus: true, required: :true, rows: 20, as: :text, :class => 'form-control' %>
  </div>

  <div class="hidden">
  	<%= f.label :nickname %><br/>
    <%= f.text_field :nickname, hint: 'Nemojte ispunjavati ovo polje' %>
  </div>


  <%= f.submit "PoÅ¡alji poruku", :class => 'btn btn-primary' %>

<% end %>

</div> 