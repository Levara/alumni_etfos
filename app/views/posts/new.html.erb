<div class="row">
<ol class="breadcrumb">
  <li> <%= link_to "Sve objave", {:action => 'index' } %></li>
  <li class="active">Nova objava</li>
</ol>
</div>

<div class="col-md-9 col-md-offset-1">

<%= form_for(:post, :url => {:action => 'create'}, html: {multipart: true}) do |f| %>

  <div class="form-group">
    <%= f.label 'Naslov:' %><br />
    <%= f.text_field :title, autofocus: true, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'SadrÅ¾aj:' %><br />
    <%= f.text_area :content, rows: 20, autofocus: true, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Autor:' %><br />
    <%= f.text_field :author, autofocus: true, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Fotografija:' %><br />
    <%= f.file_field :image, autofocus: true, :class => 'form-control' %>
  </div>

  <%= f.submit "Spremi", :class => 'btn btn-primary' %>

<% end %>

</div>
</div>