<section class="user-info">

<div class="container">
<div class="row">
	<div class="row">
		<%if @user.first_name != "" || @user.last_name != "" %>
		<h2 class="text-center"><%= @user.first_name + " " + @user.last_name %></h2>
		<% else %>
		<h2 class="text-center">Ime i prezime</h2>
		<% end %>
	</div>

	<div class="row">
		<div class="col-md-6 col-md-offset-3">

		<table class="table table-striped">
		<tr>
			<td><b>Email:</b></td>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<td><b>Korisničko ime:</b></td>
			<td><%= @user.username %></td>
		</tr>
		<tr>
			<td><b>Ime:</b></td>
			<td><%= @user.first_name %></td>
		</tr>
		<tr>
			<td><b>Prezime:</b></td>
			<td><%= @user.last_name %></td>
		</tr>
		<tr>
			<td><b>Datum rođenja:</b></td>
			<td><%= @user.birth_date %></td>
		</tr>
		<tr>
			<td><b>Završetak studija:</b></td>
			<td><%= @user.graduation_year %></td>
		</tr>
		<tr>
			<td><b>Radno mjesto:</b></td>
			<td><%= @user.work_place %></td>
		</tr>
		</table>

		</div>
	</div>
	<div class="row">
	<div class="col-md-6 col-md-offset-3 text-center">
		<%= link_to "Uredi profil", edit_path, :class => 'btn-edit-profile' %>
	</div>
	</div>
</div>
</div>
</section>